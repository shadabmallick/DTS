<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:background="@drawable/playbackground"
            android:src="@android:drawable/ic_media_play"
            android:visibility="gone" />


        <TextView
            android:id="@+id/imgtext"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="6dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_corner_image"
            android:gravity="center"
            android:minHeight="17sp"
            android:minWidth="17sp"
            android:padding="1dp"
            android:text="100"
            android:textColor="#22A8F1"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/imgtextright"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="end"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="6dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_corner_image"
            android:gravity="center"
            android:minHeight="17sp"
            android:minWidth="17sp"
            android:padding="1dp"
            android:text="100"
            android:textColor="#22A8F1"
            android:textSize="10sp"
            android:visibility="invisible" />
        <!-- <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
             android:layout_width="wrap_content"
             android:layout_height="20dp"
             android:layout_toEndOf="@id/image"
             android:bakground="#EF4738"
             android:layout_alignTop="@id/image"
             android:textSize="8sp"
             android:paddin="0dp"
             android:gravity="top|center"
             android:layout_gravity="end"
             android:layout_marginStart="7dp"
             android:layout_marginBottom="5dp"
             android:textColor="@android:color/white"
             android:text="1" />-->

    </FrameLayout>


</RelativeLayout>
