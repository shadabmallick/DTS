<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@android:color/black"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_arrow_left_solid"
            android:tint="@color/blue"
            android:padding="10dp"

            android:layout_marginTop="20dp"
            />
        <ImageView
            android:id="@+id/iimg_share"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:src="@mipmap/group_2144"
            android:tint="@color/blue"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/img_modified_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:textSize="9dp"
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:gravity="center"
            android:layout_below="@+id/iimg_share"
            android:text="@string/recent_media"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/black_curve_date"
           />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/undo"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_toRightOf="@+id/img_back"/>


        <ImageView
            android:id="@+id/img_undo"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/img_modified_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_undo"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/img_save"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/img_modified_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_save"/>

    </RelativeLayout>

</RelativeLayout>
