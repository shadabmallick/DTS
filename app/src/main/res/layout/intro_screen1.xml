<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/intro_screen1"

    >


    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_group_1963"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView" />


    <LinearLayout
        android:id="@+id/ll_center_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageView">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/keeptoo"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/too"
            android:textColor="@android:color/white"

            android:gravity="center"
            android:textSize="30dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_center"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title"

        android:textColor="@android:color/white"
        android:layout_below="@+id/ll_center_text"
        android:gravity="center"
        android:textSize="20dp"
        />
<!--
    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/skip"

        android:textColor="@android:color/white"
        android:layout_below="@+id/tv_center"
        android:gravity="center"
        android:textSize="20dp"
        />
-->

    <LinearLayout
        android:id="@+id/layoutBars"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""

            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounder_text"
            android:layout_height="wrap_content"
            >

        </TextView>
    </LinearLayout>

</RelativeLayout>