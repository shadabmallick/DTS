<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rel_top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="61dp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_arrow_left_solid"
            android:tint="@color/blue"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/tv_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16dp"
            android:text="@string/talk_with_us"
            android:layout_centerInParent="true"
            android:textColor="@color/blue"/>


    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_below="@+id/rel_top"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGrey"></View>
    <RelativeLayout
        android:background="@color/white"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@mipmap/icon_keeptoo"/>






    </RelativeLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true">


        <TextView
            android:id="@+id/tv_talk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:text="@string/talk_with_us"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/img_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@mipmap/call_icon"/>
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:textSize="16dp"
            android:text="+587-5478547"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/img_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@mipmap/icon_mail"/>


        <TextView
            android:id="@+id/tv_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16dp"
            android:text="dts@dts.com"
            android:layout_centerInParent="true"
            />


    </LinearLayout>


</RelativeLayout>