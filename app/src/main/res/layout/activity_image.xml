<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/mainlayout"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/viewpagerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.mobile.dts.helper.ImageViewerPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/black_transparent"
            android:padding="@dimen/padding_small"
            android:src="@drawable/ic_left_angle_bracket"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/black_transparent"
            android:padding="@dimen/padding_small"
            android:rotation="180"
            android:src="@drawable/ic_left_angle_bracket"
            android:visibility="gone" />

    </RelativeLayout>

   <RelativeLayout
       android:id="@+id/rl_crop"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="120dp"
       android:visibility="gone"
       android:layout_marginBottom="180dp"
       >

       <com.theartofdev.edmodo.cropper.CropImageView
           android:id="@+id/cropImageView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="100dp"
           />

       <LinearLayout
           android:layout_below="@+id/cropImageView"
           android:layout_width="match_parent"
           android:layout_marginBottom="100dp"
           android:orientation="horizontal"
           android:gravity="center"
           android:weightSum="2"
           android:id="@+id/ll_crop1"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/img_undo"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:layout_weight="1"
               android:gravity="center"
                android:src="@drawable/ic_undo"
               android:tint="@color/blue"
               android:text="Cancel"/>
           <ImageView
               android:id="@+id/done"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:tint="@color/blue"
               android:gravity="center"
             android:src="@drawable/ic_save"
               android:text="Done"/>



       </LinearLayout>
       <LinearLayout
           android:id="@+id/ll_crop"
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:gravity="center"
           android:alpha="0.75"
           android:visibility="gone"
           android:orientation="horizontal"
           android:background="@android:color/black"
           android:layout_above="@+id/ll_crop1"

           >
           <ImageView
               android:id="@+id/rotate_left"
               android:layout_width="wrap_content"

               android:layout_height="wrap_content"
               android:background="@drawable/ic_rotate_right"
               android:layout_marginRight="20dp"/>
           <ImageView
               android:id="@+id/rotate_right"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="20dp"
               android:src="@drawable/ic_rotate_left"/>
           <ImageView
               android:id="@+id/crop"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="20dp"
               android:src="@drawable/ic_crop"/>


       </LinearLayout>



   </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarlayout"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@android:color/black"
                app:contentInsetEnd="0dp"
                android:alpha="0.75"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ic_arrow_left_solid" />
                    <ImageView
                        android:id="@+id/iv_undo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:src="@mipmap/undo" />

                    <TextView
                        android:id="@+id/tv_image_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/padding_small"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Image Name"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:id="@+id/shareimage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iimg_share"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:src="@mipmap/group_2144"
                                android:tint="@color/blue"
                                android:padding="10dp"
                                />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            >

                            <TextView
                                android:background="@drawable/curve_black"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:id="@+id/tv_date"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="12-02-2019"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large_text_size" />


                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:id="@+id/stopwatchmainly"
                                android:paddingRight="15dp"
                                android:paddingLeft="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/curve_black"
                                android:gravity="center|center_vertical"
                                android:orientation="horizontal"
                                >

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:padding="3dp"
                                    android:scaleY="1.2"
                                    android:drawableLeft="@mipmap/icon_timer"
                                    android:text="Remaining :"
                                    android:textAlignment="center"
                                    android:drawablePadding="8dp"
                                    android:textColor="@android:color/white"
                                    android:gravity="center_vertical"
                                    android:textSize="12sp" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/stopWatch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:padding="3dp"
                                    android:scaleY="1.2"
                                    android:textAlignment="center"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp" />


                            </LinearLayout>


                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/padding_small"
                            android:paddingLeft="20dp"
                            android:visibility="gone"
                            android:paddingRight="20dp"
                            android:gravity="center"
                            android:background="@drawable/curve_black"
                            android:text="02:45 PM"
                            android:textColor="@color/white"
                            android:textSize="@dimen/medium_text_size" />

                    </LinearLayout>

                </LinearLayout>


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <ImageView
            android:id="@+id/iv_new"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/appbarlayout"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/icon_new"
            android:visibility="gone" />


        <com.nhaarman.supertooltips.ToolTipRelativeLayout
            android:id="@+id/activity_main_tooltipframelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_save_actions"
            android:background="@android:color/transparent"
            android:gravity="start|bottom"
            android:paddingTop="10dp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_save_actions"
            android:layout_centerInParent="true"
            android:layout_marginBottom="7dp"
            app:cardBackgroundColor="#f3f3f3"
            app:cardCornerRadius="3dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">


            <TextView
                android:id="@+id/tv_image_indication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/padding_large"
                android:paddingVertical="@dimen/padding_small"
                android:text="@string/image_indication_text"
                android:textColor="#686868"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/ll_save_actions"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:alpha="0.75"
            android:background="@android:color/black"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <RelativeLayout
                android:id="@+id/ll_restore"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/saverippleeffect"
                android:clickable="true"

                android:orientation="vertical">


                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:src="@mipmap/ic_restore"
                    android:text="@string/delete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="1dp"
                    android:capitalize="words"
                    android:clickable="false"
                    android:text="@string/restore"
                    android:textColor="@color/voilet_dark"
                    android:textSize="@dimen/normal_text_size" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/saveimage"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/saverippleeffect"
                android:clickable="true"
                android:orientation="vertical">

                <View
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                     />

                <ImageView
                    android:id="@+id/ic_save"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:src="@drawable/ic_save"
                    android:text="@string/delete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="1dp"
                    android:capitalize="words"
                    android:clickable="false"
                    android:text="@string/save"
                    android:textColor="@color/color_save"
                    android:textSize="@dimen/normal_text_size" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/saveimage24"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/saverippleeffect"
                android:clickable="true"
                android:orientation="vertical">

                <View
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                     />

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_alignParentTop="true"

                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:src="@drawable/ic_keep_to"
                    android:text="@string/delete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="1dp"
                    android:capitalize="words"
                    android:clickable="false"
                    android:text="@string/save24"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/normal_text_size" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/savekeepsafe"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/saverippleeffect"
                android:clickable="true"
                android:orientation="vertical">

                <View
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                     />

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:tint="@color/blue"
                    android:src="@mipmap/fingerprint"
                    android:text="@string/delete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="1dp"
                    android:capitalize="words"
                    android:clickable="false"
                    android:text="@string/keep_safe"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/normal_text_size" />

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/saverippleeffect"
                android:clickable="true"
                android:orientation="vertical">

                <View
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shadowlayout" />

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:src="@mipmap/ic_shareicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="1dp"
                    android:capitalize="words"
                    android:clickable="false"
                    android:text="@string/share"
                    android:textColor="#1BB5E5"
                    android:textSize="@dimen/normal_text_size" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/deleteimage"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/saverippleeffect"
                android:clickable="true"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:src="@drawable/ic_delete"
                    android:text="@string/delete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="1dp"
                    android:capitalize="words"
                    android:clickable="false"
                    android:text="@string/delete"
                    android:textColor="@color/voilet_dark"
                    android:textSize="@dimen/normal_text_size" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/magicimage"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/saverippleeffect"
                android:clickable="true"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:src="@drawable/ic_magic_wand_preview"
                    android:text="@string/delete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="1dp"
                    android:capitalize="words"
                    android:clickable="false"
                    android:text="@string/edit"
                    android:textColor="@color/light_ornage"
                    android:textSize="@dimen/normal_text_size" />

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/progress_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#59000000"
            android:clickable="true"
            android:visibility="gone">


            <ProgressBar
                android:id="@+id/myProgress"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/white" />


            <TextView
                android:id="@+id/progressbartext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myProgress"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="Processing..."

                android:textColor="#FFFFFF" />

        </RelativeLayout>

    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/mainlayout2"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.mobile.dts.helper.photoview.PhotoView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/ll_folder_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"

                >

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appbarlayout2"
                    android:background="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >


                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@android:color/black"
                        android:alpha="0.75"
                        app:contentInsetStart="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_back2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:tint="#00FFEE"
                                android:src="@drawable/ic_arrow_left_solid"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">


                                <RelativeLayout
                                    android:id="@+id/rel_create_folder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:clickable="true"
                                    >

                                    <ImageView
                                        android:id="@+id/iv_new_folder"
                                        android:layout_width="80dp"
                                        android:layout_height="50dp"
                                        android:src="@mipmap/new_folder"
                                        android:padding="10dp"
                                        />

                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp"
                                    >

                                    <TextView
                                        android:background="@drawable/curve_black"
                                        android:paddingLeft="20dp"
                                        android:paddingRight="20dp"
                                        android:id="@+id/tv_date2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="12-02-2019"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/large_text_size" />


                                    <LinearLayout
                                        android:layout_marginTop="10dp"
                                        android:id="@+id/stopwatchmainly2"
                                        android:paddingRight="15dp"
                                        android:paddingLeft="15dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/curve_black"
                                        android:gravity="center|center_vertical"
                                        android:orientation="horizontal"
                                        >

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="sans-serif"
                                            android:padding="3dp"
                                            android:scaleY="1.2"
                                            android:drawableLeft="@mipmap/icon_timer"
                                            android:text="Remaining :"
                                            android:textAlignment="center"
                                            android:drawablePadding="8dp"
                                            android:textColor="@android:color/white"
                                            android:gravity="center_vertical"
                                            android:textSize="12sp" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/stopWatch2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="sans-serif"
                                            android:padding="3dp"
                                            android:scaleY="1.2"
                                            android:textAlignment="center"
                                            android:textColor="@android:color/white"
                                            android:textSize="12sp" />


                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </androidx.appcompat.widget.Toolbar>

                </com.google.android.material.appbar.AppBarLayout>

                <LinearLayout
                    android:id="@+id/linear_show_folder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_with_alpha"
                    android:orientation="vertical"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"
                    android:visibility="visible"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                            android:textColor="#B7B7B7"
                            android:text="Safe Gallery"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/group_folder"
                            android:layout_alignParentEnd="true"
                            />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#B7B7B7"
                        android:layout_marginTop="5dp"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        >

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_folder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingEnd="80dp"
                            android:textColor="#00FFEE"
                            android:textSize="16sp"
                            android:text="Select a folder to save or open a new folder"
                            />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_create_folder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_with_alpha"
                    android:orientation="vertical"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"
                    android:paddingTop="30dp"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/new_folder"
                        android:textColor="#00FFEE"
                        />

                    <EditText
                        android:id="@+id/edt_folder_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="#00FFEE"
                        android:background="@color/transparent"
                        android:text="Untitled Folder"
                        android:hint="Folder name"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#00FFEE"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:gravity="end"
                        >


                        <TextView
                            android:id="@+id/tv_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#00FFEE"
                            android:textSize="18sp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingStart="20dp"
                            android:text="CANCEL"
                            />

                        <TextView
                            android:id="@+id/tv_ok"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#00FFEE"
                            android:textSize="18sp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingStart="40dp"
                            android:text="OK"
                            />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </FrameLayout>



</FrameLayout>